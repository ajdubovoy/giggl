<div class="search-box">
  <div class="form-row">
    <%= form_tag search_path, method: :get do %>
      <%= text_field_tag :location,
          params[:location],
          class: "form-control input-lg",
          placeholder: "Where?"
        %>
      <%= submit_tag "Search", class: "btn btn-lg btn-danger"%>
    <% end %>
  </div>
</div>

<div class="container-gig-index">
<% @gigs.each do |gig| %>
    <div class="row-gig-index gig-card">
    <div class="gig-text-index">
       <div class="gig-info-index gig-card">
      <h1 class="gig gig-name"><%= gig.name %></h1>
      <p class="gig gig-bio-index"><%= gig.description %></p>
      <p class="gig gig-genre-index"><%= gig.address %></p>

      <div class="gig-icons">
        <a href="http://<%=gig.url%>"><i class="fab fa-facebook"></i></a>
      </div>
      </div>
    </div>

    <div class="gig-photos gig-card">
    </div>
    </div>
<% end %>
  </div>
