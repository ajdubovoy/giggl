<div class="card-band-index">
  <%= render "search/search_box" %>
  <div
    id="map"
    style="width: 100%;
    height: 300px;"
    data-markers="<%= @markers.to_json %>"
  ></div>
  <% @gigs.each do |gig| %>
      <div class="row-gig-index gig-card">
      <div class="gig-text-index">
         <div class="gig-info-index gig-card">
        <h1 class="gig gig-name"><%= gig.name %></h1>
        <p class="gig gig-bio-index"><%= gig.description %></p>
        <p class="gig gig-genre-index"><%= gig.address %></p>


        <div class="gig-icons">
          <a href="http://<%=gig.url%>"><i class="fab fa-facebook"></i></a>
        </div>
        </div>
      <% booking = Booking.new %>
      <%= form_for(booking, url: gig_bookings_path(gig), method: :post, html: { id: "regForm" }) do |f| %>
        <%= f.select(:band_id, @bands.collect { |band| [band.name, band.id] }) %>
        <%= f.submit "Book now", class: "button-book" %>
      <% end %>
      </div>

      <div class="gig-photos gig-card">
        <%= cl_image_tag gig.photos.first.photo %>
      </div>
      </div>
  <% end %>
</div>
