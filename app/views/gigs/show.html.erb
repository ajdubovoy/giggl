</div>
<div class="banner banner-small" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= @gig.photos.first.photo %>');">
  <div class="banner-content">
    <h1><%= @gig.name %></h1>
    <h2>Organized by <%= @gig.organizer.name %>
    </h2>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <div class="show-card">
        <div class="row">
          <div class="col-sm-12 col-md-6">
            <div class="card-date">
              <p><%= @gig.date.strftime('%A, %d %b %Y') + ' @ ' + @gig.time.strftime('%l:%M %p') %></p>
            </div>
          </div>
          <div class="col-sm-12 col-md-9">
            <div class="show-card-description">
              <h2><%= @gig.name %></h2>
              <p><strong>Address:</strong> <%= @gig.address %></p>
              <p><strong>Genre:</strong> <%= @gig.genre.name %></p>
              <p><strong>Description:</strong> <%= @gig.description %></p>
              <p><strong>Also playing:</strong> <%= @gig.other_bands %></p>
              <p><% if @gig.paid %>
                <strong>Paid:</strong> <i class="fas fa-money-bill-alt"></i>
              <% else %>
                <strong>Paid:</strong> <i class="fas fa-times"></i>
              <% end %></p>
            </div>
          </div>
        <div class="col-sm-12 col-md-3">
          <div class="show-card-links text-right">
            <%= link_to @gig.url, class: "btn btn-primary", target: "_blank" do %>
              <i class="fab fa-facebook"></i></a>
              <% if @gig.organizer.class == "Venue" %>
                      <%= link_to "View organizer", venue_path(@gig.organizer), class: 'btn btn-primary' %>
                    <% else %>
                      <%= link_to "View organizer", band_path(@gig.organizer), class: 'btn btn-primary' %>
                    <% end %>
                    <% if current_user.nil? %>
                      <%= link_to t(".sign_in", default: "Login to book"), new_user_session_path, class: "btn btn-primary" %>
                    <% else %>
                    <div class="form-inline">
                      <% booking = Booking.new %>
                      <%= form_for(booking, url: gig_bookings_path(@gig), method: :post) do |f| %>
                        <%= f.select(:band_id, @bands.collect { |band| [band.name, band.id] }, class: "form-control") %>
                        <%= f.submit "Book now", class: "btn btn-primary" %>
                        <% end %>
                        </div>
                    <% end %>
            <% end %>
          </div>
        </div>
        <div class="col-sm-12">
          <div
            id="map"
            style="width: 100%;
            height: 300px;"
            data-markers="<%= @markers.to_json %>"
            style="border-radius: 3px; box-shadow: 1px 1px 1px rgba(0,0,0,0.1);"
          ></div>
      </div>
      </div>
    </div>
  </div>
</div>
