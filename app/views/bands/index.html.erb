
<% @bands.each do |band| %>
  <div class="col-xs-12 col-sm-12">
    <div class="card">
      <div class="card-category"><%= band.genre.name.capitalize %></div>
      <div class="card-description">
        <h2><%= band.name.upcase %></h2>
        <p><%= band.bio %></p>
      </div>
      <a class="card-link" href="#" ></a>
    </div>
  </div>
<% end %>



