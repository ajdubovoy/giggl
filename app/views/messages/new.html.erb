
<h1 class="text-center message-header">New Message to: <%= @chosen_recipient.name %></h1>
<div class="devise-card" style="margin-top: 15px">
  <div class="col-sm-12">
    <%= form_tag messages_path, method: :post do %>
    <div class="form-group">
      <%= text_field_tag 'message[subject]', nil, class: 'form-control chosen-it', required: true, placeholder: "Subject" %>
    </div>

    <div class="form-group">
      <%= text_area_tag 'message[body]', nil, cols: 3, class: 'form-control chosen-it', required: true, placeholder: "Leave your message here" %>
    </div>

    <%= hidden_field_tag :gig_id, params[:gig_id] %>
    <%= hidden_field_tag :recipients, @chosen_recipient.id %>

    <%= submit_tag 'Send', class: 'btn btn-primary banner-link' %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-sm-12 col-md-6 col-md-offset-3" style="margin-top: 40px;">
    <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.7)), url('<%= cl_image_path @gig.photos.first.photo if @gig.photos.present? %>'); height: 275px;">
      <div class="card-category">
        <p><%= @gig.date.strftime('%b %d, %Y') %></p>
        <p><%= @gig.organizer.name %><p>
        </div>
      <div class="card-description">
        <h2><%= @gig.name %></h2>
        <p><%= @gig.description[0,40] + '...' %></p>
      </div>
      <%= link_to '', gig_path(@gig), class: "card-link" %>
    </div>
  </div>
</div>
