<div class="navbar">
    <%= link_to "Home", root_path, class: "navbar-header" %>
      <%#= image_tag "logo.png", height: 50 %>  

   <div class="navbar-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to "New band", new_band_path, class: "navbar-item navbar-link" %>
      <%= link_to "Search", search_path, class: "navbar-item navbar-link" %>
      <%= link_to "My Account", account_path, class: "navbar-item navbar-link" %>
      <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "navbar-item navbar-link"%>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-item navbar-link" %>
    <% end %>
  </div>
</div>
  